<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LatestVersionOfMusicAlbums.MainWindow"
        Title="LatestVersionOfMusicAlbums">
    <StackPanel>
        <TextBox x:Name="TitleTextBox" Watermark="Title of Album" Margin="10"/>
        <TextBox x:Name="ArtistTextBox" Watermark="Name of singer" Margin="10"/>
        <TextBox x:Name="YearTextBox" Watermark="Year of issue" Margin="10"/>
        <Button Content="Add Album" x:Name="AddAlbumCommand" Margin="10" Click="AddAlbum_Click"/>
        <Button Content="Delete Album" x:Name="DeleteAlbumCommand" Margin="10" Click="DeleteAlbum_Click"/>
        <ListBox x:Name="AlbumListBox" Margin="10"/>
         
    </StackPanel>
</Window>

