<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MusicAlbumManager.Views.AlbumDialog"
        Width="400" Height="300"
        Title="Album Details">
    <StackPanel Margin="10">
        <TextBox Name="TitleTextBox" Watermark="Title" Margin="5"/>
        <TextBox Name="ArtistTextBox" Watermark="Artist" Margin="5"/>
        <TextBox Name="ReleaseYearTextBox" Watermark="Release Year" Margin="5"/>
        <TextBox Name="TracksTextBox" Watermark="Tracks (comma separated)" Margin="5"/>
        <Button Name="OkButton" Content="OK" HorizontalAlignment="Center" Margin="5"/>
    </StackPanel>
</Window>
